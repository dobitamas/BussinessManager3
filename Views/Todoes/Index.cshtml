@model IEnumerable<BussinessManager3.Models.Todo>

@{
    ViewData["Title"] = "Tasks";
}

<div style="background:aquamarine; opacity:0.9; opacity:0.9">
    <h1>Tasks</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descrpition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Group)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descrpition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TodoId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TodoId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TodoId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
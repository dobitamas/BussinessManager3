@model IEnumerable<BussinessManager3.Models.Department>

@{
    ViewData["Title"] = "Departments";
}
<div style="background:aquamarine; opacity:0.9">
    <h1 style="background:aquamarine; opacity:0.9">Departments</h1>

    <p style="background:aquamarine; opacity:0.9">
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table" style="background:aquamarine; opacity:0.9">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Field)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Field)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DepartmentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.DepartmentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
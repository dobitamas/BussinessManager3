@model IEnumerable<BussinessManager3.Models.Group>

@{
    ViewData["Title"] = "Groups";
}

<div style="background:aquamarine; opacity:0.9">
    <h1>Groups</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employees)
                    </td>
                    <td>
                        <a asp-action="AddEmployee" asp-route-id="@item.GroupId">Add Employee</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GroupId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.GroupId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.GroupId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>